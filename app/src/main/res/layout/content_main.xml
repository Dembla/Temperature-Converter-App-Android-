        android:layout_toRightOf="@+id/kelvin_celsiusId"
        android:layout_toEndOf="@+id/kelvin_celsiusId"
        android:background="#d6eab5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rankine_faran"
        android:id="@+id/rankine_faranId"
        android:layout_marginLeft="3dip"
        android:layout_above="@+id/rankine_kelvinId"
        android:layout_toRightOf="@+id/kelvin_faranId"
        android:layout_toEndOf="@+id/kelvin_faranId"
        android:background="#cced9c" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rankine_kelvin"
        android:id="@+id/rankine_kelvinId"
        android:layout_marginLeft="3dip"
        android:layout_below="@+id/kelvin_faranId"
        android:layout_toRightOf="@+id/kelvin_rankineId"
        android:layout_toEndOf="@+id/kelvin_rankineId"
        android:background="#c3e98a" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rankine_delisle"
        android:id="@+id/rankine_delisleId"
        android:layout_marginLeft="3dip"
        android:layout_below="@+id/kelvin_rankineId"
        android:layout_toRightOf="@+id/kelvin_delisleId"
        android:layout_toEndOf="@+id/kelvin_delisleId"
        android:background="#b0e364" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rankine_newton"
        android:id="@+id/rankine_newtonId"
        android:layout_marginLeft="3dip"
        android:layout_alignTop="@+id/kelvin_newtonId"
        android:layout_toRightOf="@+id/kelvin_newtonId"
        android:layout_toEndOf="@+id/kelvin_newtonId"
        android:background="#a1df44" />

    //Delisle
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delisle_celsius"
        android:id="@+id/delisle_celsiusId"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/rankine_faranId"
        android:layout_toRightOf="@+id/rankine_celsiusId"
        android:layout_toEndOf="@+id/rankine_celsiusId"
        android:background="#e7b2ca" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delisle_faran"
        android:id="@+id/delisle_faranId"
        android:layout_marginLeft="3dip"
        android:layout_alignTop="@+id/rankine_faranId"
        android:layout_toRightOf="@+id/rankine_faranId"
        android:layout_toEndOf="@+id/rankine_faranId"
        android:background="#e8a0be" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delisle_kelvin"
        android:id="@+id/delisle_kelvinId"
        android:layout_marginLeft="3dip"
        android:layout_above="@+id/rankine_delisleId"
        android:layout_toRightOf="@+id/rankine_kelvinId"
        android:layout_toEndOf="@+id/rankine_kelvinId"
        android:background="#e086ac" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delisle_rankine"
        android:id="@+id/delisle_rankineId"
        android:layout_marginLeft="3dip"
        android:layout_above="@+id/rankine_newtonId"
        android:layout_toRightOf="@+id/rankine_delisleId"
        android:layout_toEndOf="@+id/rankine_delisleId"
        android:background="#ef7cb0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delisle_newton"
        android:id="@+id/delisle_newtonId"
        android:layout_marginLeft="3dip"
        android:layout_alignTop="@+id/rankine_newtonId"
        android:layout_toRightOf="@+id/rankine_newtonId"
        android:layout_toEndOf="@+id/rankine_newtonId"
        android:background="#f268a1" />

    //Newton
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newton_celsius"
        android:id="@+id/newton_celsiusId"
        android:layout_marginLeft="3dip"
        android:layout_marginTop="8dp"
        android:layout_above="@+id/delisle_faranId"
        android:layout_toRightOf="@+id/delisle_celsiusId"
        android:layout_toEndOf="@+id/delisle_celsiusId"
        android:background="#eee0b7" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newton_faran"
        android:id="@+id/newton_faranId"
        android:layout_marginLeft="3dip"
        android:layout_alignTop="@+id/delisle_faranId"
        android:layout_toRightOf="@+id/delisle_faranId"
        android:layout_toEndOf="@+id/delisle_faranId"
        android:background="#ebdca2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newton_kelvin"
        android:id="@+id/newton_kelvinId"
        android:layout_marginLeft="3dip"
        android:layout_below="@+id/newton_faranId"
        android:layout_toRightOf="@+id/delisle_kelvinId"
        android:layout_toEndOf="@+id/delisle_kelvinId"
        android:background="#e6cf95" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newton_rankine"
        android:id="@+id/newton_rankineId"
        android:layout_marginLeft="3dip"
        android:layout_alignTop="@+id/delisle_rankineId"
        android:layout_toRightOf="@+id/delisle_rankineId"
        android:layout_toEndOf="@+id/delisle_rankineId"
        android:background="#e3c774" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newton_delisle"
        android:id="@+id/newton_delisleId"
        android:layout_marginLeft="3dip"
        android:layout_below="@+id/newton_rankineId"
        android:layout_toRightOf="@+id/delisle_newtonId"
